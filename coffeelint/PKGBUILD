pkgname=coffeelint
pkgver=1.16.1
pkgrel=1
pkgdesc="Style checker for CoffeeScript"
arch=(any)
url="http://www.coffeelint.org/"
license=('MIT')
depends=('nodejs')
makedepends=('npm')
optdepends=()
source=(https://github.com/clutchski/coffeelint/archive/v$pkgver.tar.gz)
sha512sums=('279672cc3107512daffb685bbe4c01749a5da9bd388068a1b27d6025f180f05f7d526e18eca448ad3d9003262deff367c565061d76c746b231157a3529bc7c92')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  npm install -g --user root --prefix "$pkgdir"/usr

  rmdir "$pkgdir/usr/etc"
}

