_name=matrix-python-sdk
pkgname=python-matrix-client-git
pkgver=0.0.6
pkgrel=1
pkgdesc="Client-Server SDK for Matrix"
arch=('any')
url="https://github.com/matrix-org/$_name"
license=('Apache2')
depends=('python')
makedepends=('git')
provides=('python-matrix-client')
conflicts=('python-matrix-client')
#options=(!emptydirs)
source=("git+https://github.com/matrix-org/matrix-python-sdk.git")
sha512sums=('SKIP')

package() {
  cd "$srcdir/$_name"
  python setup.py install --root="$pkgdir/" --optimize=1
}

